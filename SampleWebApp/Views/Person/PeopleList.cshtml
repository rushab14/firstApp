@model IEnumerable<SampleWebApp.Models.Person>

@{
    ViewData["Title"] = "PeopleList";
}

<h1>PeopleList</h1>

<p>
    <a asp-action="Create">Create New</a>
    @Html.ActionLink("Search in Age Range", "GetPeopleWithingAge", new {startAge =10 , endAge =50})
    
